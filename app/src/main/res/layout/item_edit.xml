<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llFilter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_small"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="false"
    android:orientation="vertical">

    <View
        android:id="@+id/v_circle_filter"
        android:layout_width="@dimen/margin_small"
        android:layout_height="@dimen/margin_small"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/circle_red"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/img_filter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/filter_drawable_height"
        android:adjustViewBounds="true"
        android:layout_gravity="center" />

    <com.llc111minutes.gameday.ui.widget.LatoBlackTextView
        android:id="@+id/txt_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_3" />

</LinearLayout>